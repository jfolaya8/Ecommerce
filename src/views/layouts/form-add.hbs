                <div class="row">

                    {{!-- FORMULARIO DE AGREGAR PRODUCTO --}}
                    <form enctype="multipart/form-data" method="POST" action="/addproducto" class="form-style">
                        <div class="form-row">
                            <div class="col">
                                <label class="input-style">Nombre producto *</label>
                                <input name="nombre" required type="text" class="form-control" placeholder="">
                            </div>
                            <div class="col">
                                <label class="input-style">Precio *</label>
                                <input name="precio" required type="number"  min="0" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="input-style">Unidades disponibles *</label>
                                <input name="unidades" required type="number" min="0" max="100" class="form-control" placeholder="">
                            </div>
                            <div class="col">
                                <label class="input-style">Descripcion *</label>
                                <input name="descripcion" required type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="input-style" data-toggle="tooltip" data-placement="top" title="Las caracteristicas deben estar separadas por comas (,)">Caracteristicas *</label>
                                <input name="caracteristicas" required type="text" class="form-control" placeholder="">
                            </div>
                            <div class="col">
                                <label class="input-style">Descuento (%)</label>
                                <input name="descuento" required value="0" type="number" min="0" max="100" class="form-control"  placeholder="">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="input-style">Imagen del producto</label>
                                <input name="file" type="file" class="form-control-file" id="img">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="/admproducto"><button type="button" class="btn btn-secondary">Cancelar</button></a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>

